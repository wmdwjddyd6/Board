<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.board.repository.mapper.CommentMapper">

    <sql id="commentColumns">
        id
        ,board_id
        ,content
        ,writer_id
        ,writer
        ,create_date
    </sql>

    <!--댓글 개수 (댓글 관리)-->
    <select id="countJoinComment" resultType="int">
        SELECT
            COUNT(*)
        FROM
            tb_board b Join tb_comment c
        ON
            b.delete_yn = 'N' AND b.id = c.board_id AND c.writer = #{writer}
    </select>

    <!--댓글 리스트 (댓글 관리)-->
    <select id="joinCommentList" resultType="Comment">
        SELECT
            c.*
        FROM
            tb_board b Join tb_comment c
        ON
            b.delete_yn = 'N' AND b.id = c.board_id AND c.writer = #{writer}
        ORDER BY
            id DESC,
            create_date
            <include refid="CommonMapper.paging"/>
    </select>

    <!--게시글 내 댓글 조회-->
    <select id="selectCommentList" resultType="Comment">
        SELECT
            <include refid="commentColumns"/>
        FROM
            tb_comment
        WHERE
            board_id = #{boardId}
    </select>

    <!--댓글 작성-->
    <insert id="insertComment">
        INSERT INTO
            tb_comment (board_id, content, writer_id, writer, create_date)
        VALUES
            (#{boardId}, #{content}, #{writerId}, #{writer}, #{createDate})
    </insert>

    <!--댓글 수정-->
    <update id="updateComment">
        UPDATE
            tb_comment
        SET
            content = #{content}
        WHERE
            id = #{id}
    </update>

    <!--댓글 삭제-->
    <delete id="deleteComment">
        DELETE FROM
            tb_comment
        WHERE
            id = #{id}
    </delete>
</mapper>