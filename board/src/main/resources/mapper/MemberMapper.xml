<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.board.repository.MemberMapper">

    <sql id="memberColumns">
        id
        ,username
        ,password
        ,email
        ,role
        ,create_date
    </sql>

    <!--(관리자 회원관리 페이징) 회원정보 받아오기-->
    <select id="selectMemberList" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        <if test="searchText != null and searchText !=''">
            WHERE
                username LIKE CONCAT(#{searchText}, '%')
        </if>
        ORDER BY
            role
            ,id
        <include refid="CommonMapper.paging"/>
    </select>

    <!--(관리자 회원관리 페이징) 회원수 카운트-->
    <select id="selectMemberTotalCount" resultType="int">
        SELECT
            COUNT(*)
        FROM
            tb_userinfo
        <if test="searchText != null and searchText !=''">
            WHERE
                username LIKE CONCAT(#{searchText}, '%')
        </if>
    </select>

    <!--이름으로 회원정보 받기-->
    <select id="findByUsername" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        WHERE
            username = #{username}
    </select>

    <!--계정생성-->
    <insert id="save" parameterType="Member">
        INSERT INTO
            tb_userinfo (username, password, email, role, create_date)
        VALUES
            (#{username}, #{password}, #{email}, #{role}, #{createDate})
    </insert>

    <!--계정삭제-->
    <delete id="delete" parameterType="Member">
        DELETE FROM
            tb_userinfo
        WHERE
            id = #{id}
    </delete>

    <!--비밀번호 변경-->
    <update id="pwdChange" parameterType="Member">
        UPDATE
            tb_userinfo
        SET
            password = #{password}
        WHERE
            id = #{id}
    </update>

    <!--이메일로 회원정보 받기-->
    <select id="findByEmail" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        WHERE
            email = #{email}
    </select>

    <!--id로 회원정보 받기-->
    <select id="findById" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        WHERE
            id = #{id}
    </select>
</mapper>