<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.board.repository.mapper.MemberMapper">

    <sql id="memberColumns">
        id
        ,username
        ,password
        ,email
        ,role
        ,create_date
    </sql>

    <!--(관리자)모든 회원정보 받아오기-->
    <select id="selectAllMember" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        ORDER BY
            role
            ,id
    </select>

    <!--이름으로 회원정보 받기-->
    <select id="findByUsername" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        WHERE
            username = #{username}
    </select>

    <!--회원가입-->
    <insert id="save" parameterType="Member">
        INSERT INTO
            tb_userinfo (username, password, email, create_date)
        VALUES
            (#{username}, #{password}, #{email}, #{createDate})
    </insert>

    <!--회원탈퇴-->
    <delete id="delete" parameterType="Member">
        DELETE FROM
            tb_userinfo
        WHERE
            id = #{id}
    </delete>

    <!--비밀번호 변경-->
    <update id="pwdChange" parameterType="Member">
        UPDATE
            tb_userinfo
        SET
            password = #{password}
        WHERE
            id = #{id}
    </update>

    <!--이메일로 회원정보 받기-->
    <select id="findByEmail" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
        WHERE
            email = #{email}
    </select>
</mapper>