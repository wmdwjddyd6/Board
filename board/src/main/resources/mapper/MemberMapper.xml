<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.board.repository.MemberMapper">

    <sql id="memberColumns">
        id
        ,username
        ,password
        ,email
        ,role
    </sql>

    <!--모든 회원정보 받아오기-->
    <select id="selectAllMember" resultType="Member">
        SELECT
            <include refid="memberColumns"/>
        FROM
            tb_userinfo
    </select>

    <!--아이디로 회원정보 받기-->
    <select id="findByUsername" resultType="Member">
        SELECT
        <include refid="memberColumns"/>
        FROM
        tb_userinfo
        WHERE
        username = #{username}
    </select>

    <!--회원가입-->
    <insert id="save" parameterType="String">
        INSERT INTO
            tb_userinfo (username, password, email)
        VALUES
            (#{username}, #{password}, #{email})
    </insert>

    <!--회원탈퇴-->
    <delete id="delete" parameterType="Member">
        DELETE FROM
            tb_userinfo
        WHERE
            id = #{id}
    </delete>

    <!--비밀번호 변경-->
    <update id="pwdChange" parameterType="Member">
        UPDATE
            tb_userinfo
        SET
            password = #{password}
        WHERE
            id = #{id}
    </update>
</mapper>