<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.min.board.repository.BoardMapper">

    <sql id="boardColumns">
        id
        ,title
        ,content
        ,writer_id
        ,delete_yn
        ,image
    </sql>

    <select id="selectBoardById" resultType="Board">
        SELECT
            <include refid="boardColumns"/>
        FROM
            tb_board
        WHERE
            id = #{id}
    </select>

    <select id="selectAllBoards" resultType="Board">
        SELECT
            <include refid="boardColumns"/>
        FROM
            tb_board
    </select>

    <insert id="insertBoard" parameterType="Board">
        INSERT INTO
            tb_board (title, content, writer_id)
        VALUES
            (#{title}, #{content}, #{writerId})
    </insert>

    <update id="updateBoard" parameterType="Board">
        UPDATE
            tb_board
        SET
            title = #{title}
            ,content = #{content}
        WHERE
            id = #{id}
    </update>

    <select id="findById" resultType="Board">
        SELECT
            <include refid="boardColumns"/>
        FROM
            tb_board
        WHERE
            id = #{id}
    </select>

    <update id="temporaryDeleteById" parameterType="Long">
        UPDATE
            tb_board
        SET
            delete_yn = "Y"
        WHERE
            id = #{id}
    </update>
</mapper>